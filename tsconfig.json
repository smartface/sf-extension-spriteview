{
    "compilerOptions": {
      "incremental": true,
      "target": "es5",
          "moduleResolution": "node",
      "module": "commonjs",
      "lib": ["es6"],
      "checkJs": true,
      "declaration": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": ".",
      "downlevelIteration": true,
      "strict": true,
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    },
    "include": [
      "."
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
  }
  